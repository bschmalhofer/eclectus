# Makefile for languages/eclectus

# configuration settings
BUILD_DIR       = @build_dir@
LOAD_EXT        = @load_ext@
O               = @o@

# Set up commands
PERL            = @perl@
RM_F            = @rm_f@
RECONFIGURE     = $(PERL) @build_dir@/tools/dev/reconfigure.pl
BUILD_DYNPMC    = $(PERL) @build_dir@/tools/build/dynpmc.pl

# Set up directories
PARROT_DYNEXT   = @build_dir@/runtime/parrot/dynext
PMC_DIR         = src/pmc

ECLECTUS_GROUP  = $(PMC_DIR)/eclectus_group@load_ext@
PMCS            = \
    eclectusboolean \
    eclectuscharacter \
    eclectusemptylist \
    eclectusfixnum \
    eclectusstring
PMC_SOURCES     = \
    $(PMC_DIR)/eclectusboolean.pmc \
    $(PMC_DIR)/eclectuscharacter.pmc \
    $(PMC_DIR)/eclectusemptylist.pmc \
    $(PMC_DIR)/eclectusfixnum.pmc \
    $(PMC_DIR)/eclectusstring.pmc


# The default target
default: build

help :
	@echo ""
	@echo "Following targets are available for the user:"
	@echo ""
	@echo "  build:             Builds the dynamic PMCSs needed by Eclectus."
	@echo "                     This is the default target."
	@echo ""
	@echo "  test:              Run the test suite."
	@echo ""
	@echo "  clean:             Clean up temporary files."
	@echo ""
	@echo "  realclean:         Clean up generated files."
	@echo ""
	@echo "  help:              Print this help message."

# regenerate the Makefile
Makefile: config/makefiles/root.in
	cd $(BUILD_DIR) && $(RECONFIGURE) --step=gen::languages --languages=eclectus

# Compilation:
build: $(ECLECTUS_GROUP)

$(ECLECTUS_GROUP): $(PARROT) $(PMC_SOURCES)
	cd $(PMC_DIR) && $(BUILD_DYNPMC) generate $(PMCS)
	cd $(PMC_DIR) && $(BUILD_DYNPMC) compile $(PMCS)
	cd $(PMC_DIR) && $(BUILD_DYNPMC) linklibs $(PMCS)
	cd $(PMC_DIR) && $(BUILD_DYNPMC) copy --destination=$(PARROT_DYNEXT) $(PMCS)

# cleaning up

clean: dynext-clean
	$(RM_F) \
  foo.pasm foo.pbc \
  "*.out" \
  "*.pir"

dynext-clean:
	$(RM_F) \
  $(PMC_DIR)/*.h \
  $(PMC_DIR)/*.c \
  $(PMC_DIR)/*.dump \
  $(PMC_DIR)/*$(O) \
  $(PMC_DIR)/*$(LOAD_EXT) \
  $(PMC_DIR)/*.exp \
  $(PMC_DIR)/*.ilk \
  $(PMC_DIR)/*.manifest \
  $(PMC_DIR)/*.pdb \
  $(PMC_DIR)/*.lib


realclean: clean
	$(RM_F) Makefile

# testing
test: build
	$(PERL) t/harness
