pmclass EclectusCharacter
    extends Integer
    does Integer
    dynpmc
    group eclectus_group
    hll Eclectus
    maps Integer {

    VTABLE STRING* get_string() {
        return string_append(INTERP,
                             CONST_STRING(INTERP, "#\\"),
                             string_chr(INTERP, PMC_int_val(SELF)));
    }
}

